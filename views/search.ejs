<!-- Hero -->
<div class="hero reveal">
    <h1>Search Results</h1>
    <p>Found results matching your query.</p>
</div>

<div class="container" style="padding-bottom: 80px;">
    <section class="posts-section">
        <% if(data.length> 0) { %>
            <div class="post-grid">
                <% data.forEach((post, index)=> { %>
                    <article class="post-card glass-panel reveal" style="transition-delay: <%= index * 50 %>ms">
                        <a href="/post/<%= post._id %>" style="display: flex; flex-direction: column; height: 100%;">
                            <div class="card-image-wrapper">
                                <% if(post.image) { %>
                                    <img src="<%= post.image %>" alt="<%= post.title %>" loading="lazy">
                                    <% } else { %>
                                        <div class="placeholder-image"
                                            style="width:100%; height:100%; background: linear-gradient(135deg, var(--surface-2) 0%, var(--border-color) 100%); display: flex; align-items: center; justify-content: center;">
                                            <i class="fas fa-search" style="font-size: 3rem; opacity: 0.2;"></i>
                                        </div>
                                        <% } %>
                            </div>

                            <div class="post-content">
                                <h3>
                                    <%= post.title %>
                                </h3>
                                <p class="post-excerpt">
                                    <%= post.body.replace(/(<([^>]+)>)/gi, "").substring(0, 120) %>...
                                </p>
                                <span class="read-more-btn">Read More <i class="fas fa-arrow-right"></i></span>
                            </div>
                        </a>
                    </article>
                    <% }) %>
            </div>
            <% } else { %>
                <div class="glass-panel reveal"
                    style="text-align: center; padding: 100px 20px; max-width: 600px; margin: 0 auto;">
                    <i class="fas fa-search"
                        style="font-size: 4rem; color: var(--border-color); margin-bottom: 20px;"></i>
                    <h2 style="font-size: 2rem; margin-bottom: 10px;">No results found</h2>
                    <p style="color: var(--text-secondary);">We couldn't find any articles matching your search. Try
                        different keywords.</p>
                    <a href="/articles" class="btn-primary" style="margin-top: 30px; display: inline-block;">Browse All
                        Articles</a>
                </div>
                <% } %>
    </section>
</div>