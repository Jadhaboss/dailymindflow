<div class="hero">
    <h1>Search Results</h1>
    <p>Found results matching your query.</p>
</div>

<section class="posts-section container">
    <% if(data.length> 0) { %>
        <div class="post-grid">
            <% data.forEach(post=> { %>
                <article class="post-card reveal">
                    <a href="/post/<%= post._id %>">
                        <div class="card-image-wrapper">
                            <% if(post.image) { %>
                                <img src="<%= post.image %>" alt="<%= post.title %>" loading="lazy">
                                <% } else { %>
                                    <div class="placeholder-image" style="width:100%; height:100%; background: #eee;">
                                    </div>
                                    <% } %>
                        </div>
                        <div class="post-content">
                            <h3>
                                <%= post.title %>
                            </h3>
                            <p class="post-excerpt">
                                <%= post.body.substring(0, 120) %>...
                            </p>
                            <span class="read-more-btn">Read More <i class="fas fa-arrow-right"></i></span>
                        </div>
                    </a>
                </article>
                <% }) %>
        </div>
        <% } else { %>
            <div style="text-align: center; padding: 60px 0;">
                <i class="fas fa-search" style="font-size: 4rem; color: #ddd; margin-bottom: 20px;"></i>
                <h2 style="font-size: 2rem; margin-bottom: 10px;">No results found</h2>
                <p style="color: var(--text-secondary);">Try searching for a different keyword.</p>
            </div>
            <% } %>
</section>