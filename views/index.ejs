<div class="hero">
    <h1>Flow Your Mind Daily.</h1>
    <p>Discover stories, thinking, and expertise from writers on any topic. A place where ideas find their voice.</p>
</div>

<section class="posts-section container">
    <div class="post-grid">
        <% data.forEach(post=> { %>
            <article class="post-card reveal">
                <a href="/post/<%= post._id %>">
                    <% if(post.image && post.image.trim() !=="" ) { %>
                        <div class="card-image-wrapper">
                            <img src="<%= post.image %>" alt="<%= post.title %>" loading="lazy">
                        </div>
                        <% } %>
                            <div class="post-content">
                                <h3>
                                    <%= post.title %>
                                </h3>
                                <p class="post-excerpt">
                                    <%= post.body.substring(0, 120) %>...
                                </p>
                                <span class="read-more-btn">Read More <i class="fas fa-arrow-right"></i></span>
                            </div>
                </a>
            </article>
            <% }) %>
    </div>

    <% if (typeof showSeeAll !=='undefined' && showSeeAll) { %>
        <div style="margin-top: 60px; text-align: center;" class="reveal">
            <a href="/articles" class="btn btn-primary"
                style="padding: 14px 32px; font-size: 1.1rem; border-radius: 50px;">
                See All Articles <i class="fas fa-arrow-right" style="margin-left: 8px;"></i>
            </a>
        </div>
        <% } %>
</section>