<article class="single-post-container">
    <header class="post-meta-header reveal">
        <% if(data.category) { %>
            <span class="category-badge">
                <%= data.category.name %>
            </span>
            <% } %>
                <h1>
                    <%= data.title %>
                </h1>
                <div class="post-meta-info">
                    <span>By Admin</span> &bull;
                    <span>
                        <%= new Date(data.createdAt).toLocaleDateString('en-US', { month: 'long' , day: 'numeric' ,
                            year: 'numeric' }) %>
                    </span>
                </div>
    </header>

    <% if(data.image) { %>
        <img src="<%= data.image %>" alt="<%= data.title %>" class="post-feature-img reveal">
        <% } %>

            <div class="article-content reveal">
                <%- data.body.replace(/\n/g, '<br>' ) %>
            </div>

            <div style="margin-top: 60px; text-align: center;">
                <a href="/" class="btn-icon"><i class="fas fa-arrow-left"></i> Back to Home</a>
            </div>
</article>