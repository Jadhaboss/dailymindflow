<div class="container" style="padding-top: 40px; padding-bottom: 60px;">

    <!-- Dashboard Header -->
    <div class="reveal"
        style="margin-bottom: 40px; display: flex; justify-content: space-between; align-items: flex-end; flex-wrap: wrap; gap: 20px;">
        <div>
            <span
                style="font-size: 0.9rem; text-transform: uppercase; letter-spacing: 1px; color: var(--accent-color); font-weight: 600;">Overview</span>
            <h1 style="font-size: 3rem; margin-top: 5px; margin-bottom: 0;">Dashboard</h1>
        </div>

        <div style="display: flex; gap: 12px;">
            <a href="/admin/categories" class="btn"
                style="background: var(--surface-1); border: 1px solid var(--border-color); color: var(--text-color); display: inline-flex; align-items: center; gap: 8px; padding: 12px 24px; border-radius: 50px; box-shadow: var(--shadow-sm); transition: all 0.2s;">
                <i class="fas fa-tags"></i> <span>Manage Categories</span>
            </a>
            <a href="/admin/add-post" class="btn-primary"
                style="text-decoration: none; display: inline-flex; align-items: center; gap: 8px; padding: 12px 24px; border-radius: 50px; box-shadow: var(--shadow-md);">
                <i class="fas fa-plus"></i> <span style="font-weight: 500;">New Post</span>
            </a>
        </div>
    </div>

    <!-- Stats Row (Optional Placeholder for Future) -->
    <!-- <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 24px; margin-bottom: 40px;"> ... </div> -->

    <!-- Main Content Card -->
    <div class="reveal"
        style="background: var(--surface-1); border-radius: 24px; border: 1px solid var(--border-color); box-shadow: var(--shadow-lg); overflow: hidden;">

        <div
            style="padding: 30px; border-bottom: 1px solid var(--border-color); display: flex; justify-content: space-between; align-items: center;">
            <h3 style="font-size: 1.25rem; margin: 0;">Recent Posts</h3>
            <span style="font-size: 0.9rem; color: var(--text-secondary);">
                <%= posts.length %> total stories
            </span>
        </div>

        <% if(posts && posts.length> 0) { %>
            <div class="table-responsive">
                <table style="width: 100%; border-collapse: collapse; min-width: 700px;">
                    <thead style="background: var(--surface-2);">
                        <tr>
                            <th
                                style="padding: 20px 30px; text-align: left; font-weight: 600; color: var(--text-secondary); font-size: 0.85rem; text-transform: uppercase; letter-spacing: 0.5px;">
                                Title</th>
                            <th
                                style="padding: 20px 30px; text-align: left; font-weight: 600; color: var(--text-secondary); font-size: 0.85rem; text-transform: uppercase; letter-spacing: 0.5px;">
                                Date</th>
                            <th
                                style="padding: 20px 30px; text-align: right; font-weight: 600; color: var(--text-secondary); font-size: 0.85rem; text-transform: uppercase; letter-spacing: 0.5px;">
                                Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% posts.forEach(post=> { %>
                            <tr style="border-bottom: 1px solid var(--border-color); transition: background 0.2s;"
                                onmouseover="this.style.background='var(--surface-2)'"
                                onmouseout="this.style.background='transparent'">
                                <td style="padding: 20px 30px;">
                                    <h4
                                        style="margin: 0; font-size: 1.1rem; font-weight: 600; color: var(--text-color);">
                                        <%= post.title %>
                                    </h4>
                                </td>
                                <td style="padding: 20px 30px; color: var(--text-secondary); font-size: 0.95rem;">
                                    <i class="far fa-calendar-alt" style="margin-right: 6px; opacity: 0.7;"></i>
                                    <%= new Date(post.createdAt).toLocaleDateString(undefined, { year: 'numeric' ,
                                        month: 'short' , day: 'numeric' }) %>
                                </td>
                                <td style="padding: 20px 30px; text-align: right;">
                                    <div style="display: inline-flex; gap: 10px;">
                                        <a href="/admin/edit-post/<%= post._id %>" class="btn-icon" title="Edit"
                                            style="width: 36px; height: 36px; display: flex; align-items: center; justify-content: center; border-radius: 50%; background: var(--surface-2); color: var(--text-color); transition: all 0.2s; border: 1px solid var(--border-color);">
                                            <i class="fas fa-pen" style="font-size: 0.9rem;"></i>
                                        </a>

                                        <form action="/admin/delete-post/<%= post._id %>?_method=DELETE" method="POST"
                                            style="display:inline;"
                                            onsubmit="return confirm('Are you sure you want to delete this post? This cannot be undone.');">
                                            <button type="submit" class="btn-icon" title="Delete"
                                                style="width: 36px; height: 36px; display: flex; align-items: center; justify-content: center; border-radius: 50%; background: rgba(239, 68, 68, 0.1); color: #ef4444; border: 1px solid transparent; cursor: pointer; transition: all 0.2s;">
                                                <i class="fas fa-trash" style="font-size: 0.9rem;"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
            <% } else { %>
                <div
                    style="padding: 80px 20px; text-align: center; display: flex; flex-direction: column; align-items: center;">
                    <div
                        style="width: 80px; height: 80px; background: var(--surface-2); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin-bottom: 24px;">
                        <i class="fas fa-feather-alt"
                            style="font-size: 2.5rem; color: var(--text-secondary); opacity: 0.5;"></i>
                    </div>
                    <h3 style="margin-bottom: 10px; font-size: 1.5rem;">No stories yet</h3>
                    <p style="color: var(--text-secondary); max-width: 400px; margin-bottom: 30px; line-height: 1.6;">
                        Your dashboard is looking a bit empty. It's the perfect time to start writing your first
                        masterpiece.
                    </p>
                    <a href="/admin/add-post" class="btn-primary" style="padding: 12px 32px; border-radius: 50px;">
                        Write your first post
                    </a>
                </div>
                <% } %>
    </div>
</div>

<style>
    .btn-icon:hover {
        transform: translateY(-2px);
        box-shadow: var(--shadow-sm);
    }
</style>