<div class="container" style="min-height: 80vh; display: flex; align-items: center; justify-content: center;">

    <div class="reveal" style="width: 100%; max-width: 420px;">

        <!-- Brand Header -->
        <div style="text-align: center; margin-bottom: 40px;">
            <div
                style="width: 64px; height: 64px; background: var(--surface-1); border-radius: 50%; display: inline-flex; align-items: center; justify-content: center; box-shadow: var(--shadow-md); margin-bottom: 24px; border: 1px solid var(--border-color);">
                <i class="fas fa-user-plus" style="font-size: 28px; color: var(--accent-color);"></i>
            </div>
            <h1 style="font-size: 2.5rem; margin-bottom: 8px;">Join the Team</h1>
            <p style="color: var(--text-secondary); font-size: 1.1rem;">Create a new administrator account.</p>
        </div>

        <!-- Register Card -->
        <div
            style="background: var(--surface-1); padding: 40px; border-radius: 24px; box-shadow: var(--shadow-lg); border: 1px solid var(--border-color); position: relative; overflow: hidden;">

            <!-- Decorative Gradient -->
            <div
                style="position: absolute; top: 0; left: 0; width: 100%; height: 6px; background: linear-gradient(90deg, var(--accent-color), var(--primary-color));">
            </div>

            <form action="/auth/register" method="POST">

                <div class="form-group">
                    <label for="username" class="form-label" style="font-size: 0.95rem;">Choose Username</label>
                    <div style="position: relative;">
                        <i class="fas fa-at"
                            style="position: absolute; left: 16px; top: 50%; transform: translateY(-50%); color: var(--text-secondary); opacity: 0.7;"></i>
                        <input type="text" name="username" id="username" class="form-control" required
                            placeholder="e.g. creative_editor" style="padding-left: 48px;">
                    </div>
                </div>

                <div class="form-group" style="margin-bottom: 32px;">
                    <label for="password" class="form-label" style="font-size: 0.95rem;">Create Password</label>
                    <div style="position: relative;">
                        <i class="fas fa-shield-alt"
                            style="position: absolute; left: 16px; top: 50%; transform: translateY(-50%); color: var(--text-secondary); opacity: 0.7;"></i>
                        <input type="password" name="password" id="password" class="form-control" required
                            placeholder="Min. 8 characters" style="padding-left: 48px;">
                    </div>
                </div>

                <div class="form-group" style="margin-bottom: 24px;">
                    <label style="display: flex; align-items: start; gap: 10px; cursor: pointer;">
                        <input type="checkbox" required style="margin-top: 4px; accent-color: var(--accent-color);">
                        <span style="font-size: 0.9rem; color: var(--text-secondary); line-height: 1.4;">I agree to the
                            <a href="#" style="text-decoration: underline;">Terms of Service</a> and Privacy
                            Policy.</span>
                    </label>
                </div>

                <button type="submit" class="btn-primary"
                    style="width: 100%; height: 50px; display: flex; align-items: center; justify-content: center; gap: 10px; font-size: 1.05rem;">
                    <span>Create Account</span>
                    <i class="fas fa-user-check" style="font-size: 0.9rem;"></i>
                </button>

            </form>
        </div>

        <!-- Footer Links -->
        <div style="text-align: center; margin-top: 32px;">
            <p style="color: var(--text-secondary); font-size: 0.95rem;">
                Already have an account?
                <a href="/auth/login"
                    style="color: var(--text-color); font-weight: 600; text-decoration: none; border-bottom: 1px solid var(--accent-color);">Sign
                    in</a>
            </p>
        </div>

    </div>

</div>