<div class="reveal"
    style="max-width: 400px; margin: 80px auto; padding: 40px; background: var(--surface-1); border-radius: 20px; box-shadow: var(--shadow-lg); border: 1px solid var(--border-color); text-align: center;">

    <div style="margin-bottom: 30px;">
        <i class="fas fa-user-plus" style="font-size: 3rem; color: var(--accent-color);"></i>
        <h2 style="font-size: 2rem; margin-top: 16px;">New Admin</h2>
        <p style="color: var(--text-secondary);">Register a new administrator</p>
    </div>

    <form action="/auth/register" method="POST" style="text-align: left;">
        <div class="form-group">
            <label for="username" class="form-label">Username</label>
            <input type="text" name="username" id="username" class="form-control" required
                placeholder="Choose a username">
        </div>

        <div class="form-group">
            <label for="password" class="form-label">Password</label>
            <input type="password" name="password" id="password" class="form-control" required placeholder="••••••••">
        </div>

        <button type="submit" class="btn-primary" style="width: 100%; margin-top: 10px;">Register</button>
    </form>

    <div style="margin-top: 24px; font-size: 0.9rem;">
        <a href="/auth/login" style="color: var(--text-secondary); text-decoration: underline;">Already have an
            account?</a>
    </div>
</div>