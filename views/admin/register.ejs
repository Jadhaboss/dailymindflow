<div class="auth-container">
    <div class="auth-glass-card">

        <div class="auth-icon-wrapper">
            <i class="fas fa-user-plus"></i>
        </div>

        <h1 class="auth-title">Join the Team</h1>
        <p class="auth-subtitle">Start your journey as a creator</p>

        <form action="/auth/register" method="POST">
            <div class="auth-input-group">
                <label for="username" class="auth-label">Choose Username</label>
                <div class="input-wrapper">
                    <input type="text" name="username" id="username" class="auth-input" placeholder="e.g. creative_nav"
                        required autocomplete="username">
                    <i class="fas fa-at auth-input-icon"></i>
                </div>
            </div>

            <div class="auth-input-group">
                <label for="password" class="auth-label">Create Password</label>
                <div class="input-wrapper">
                    <input type="password" name="password" id="password" class="auth-input"
                        placeholder="Min. 8 characters" required autocomplete="new-password">
                    <i class="fas fa-shield-alt auth-input-icon"></i>
                </div>
            </div>

            <label class="terms-check">
                <input type="checkbox" required>
                <span class="terms-text">I agree to the <a href="/terms" class="auth-link">Terms</a> & <a
                        href="/privacy" class="auth-link">Privacy Policy</a></span>
            </label>

            <button type="submit" class="auth-btn">
                <span>Create Account</span>
                <i class="fas fa-user-check"></i>
            </button>
        </form>

        <div class="auth-footer">
            <p>Already have an account? <a href="/auth/login" class="auth-link">Sign in</a></p>
        </div>
    </div>

    <div style="text-align: center; margin-top: 30px; opacity: 0.5;">
        <a href="/"
            style="color: rgba(255,255,255,0.7); font-size: 0.9rem; display: inline-flex; align-items: center; gap: 8px; text-decoration: none; transition: color 0.3s;">
            <i class="fas fa-arrow-left"></i> Back to Home
        </a>
    </div>
</div>