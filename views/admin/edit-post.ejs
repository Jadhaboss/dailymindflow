<div class="container reveal">

    <!-- Header Section -->
    <div style="margin-bottom: 50px; text-align: center;">
        <a href="/admin/dashboard" class="back-link"
            style="display: inline-flex; align-items: center; gap: 8px; color: var(--text-secondary); margin-bottom: 20px; font-weight: 500; font-size: 0.95rem; text-decoration: none; transition: color 0.3s;">
            <i class="fas fa-arrow-left"></i> Back to Dashboard
        </a>
        <h1
            style="font-family: 'Playfair Display', serif; font-size: 3.5rem; margin-bottom: 12px; font-weight: 700; background: linear-gradient(180deg, #fff 0%, rgba(255,255,255,0.7) 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
            Edit Story</h1>
        <p
            style="color: var(--text-secondary); font-size: 1.1rem; max-width: 600px; margin: 0 auto; letter-spacing: 0.02em;">
            Refine your content and perfect your message.
        </p>
    </div>

    <!-- Main Form Card -->
    <div style="max-width: 900px; margin: 0 auto;">
        <form action="/admin/edit-post/<%= data._id %>?_method=PUT" method="POST" enctype="multipart/form-data">

            <div
                style="background: rgba(10, 10, 15, 0.6); backdrop-filter: blur(40px); border: 1px solid rgba(255,255,255,0.08); border-top: 1px solid rgba(255,255,255,0.15); border-radius: 32px; padding: 48px; box-shadow: 0 40px 80px -20px rgba(0,0,0,0.5);">

                <!-- Title & Category Row -->
                <div style="display: grid; grid-template-columns: 2fr 1fr; gap: 32px; margin-bottom: 32px;">
                    <div class="form-group" style="margin-bottom: 0;">
                        <label for="title" class="form-label"
                            style="display: block; margin-bottom: 10px; font-size: 0.85rem; letter-spacing: 1px; text-transform: uppercase; color: rgba(255,255,255,0.5); font-weight: 600; margin-left: 4px;">Title</label>
                        <input type="text" id="title" name="title" value="<%= data.title %>" required
                            class="form-control"
                            style="width: 100%; background: rgba(255,255,255,0.03); border: 1px solid rgba(255,255,255,0.1); padding: 16px 20px; border-radius: 16px; color: #fff; font-size: 1.1rem; outline: none; transition: all 0.3s;">
                    </div>

                    <div class="form-group" style="margin-bottom: 0;">
                        <label for="category" class="form-label"
                            style="display: block; margin-bottom: 10px; font-size: 0.85rem; letter-spacing: 1px; text-transform: uppercase; color: rgba(255,255,255,0.5); font-weight: 600; margin-left: 4px;">Category</label>
                        <div style="position: relative;">
                            <select name="category" id="category" class="form-control"
                                style="width: 100%; appearance: none; cursor: pointer; background: rgba(255,255,255,0.03); border: 1px solid rgba(255,255,255,0.1); padding: 16px 20px; border-radius: 16px; color: #fff; font-size: 1rem; outline: none; transition: all 0.3s;">
                                <% categories.forEach(cat=> { %>
                                    <option value="<%= cat._id %>" <%=data.category &&
                                        data.category.toString()===cat._id.toString() ? 'selected' : '' %>
                                        style="background: #0f172a;"><%= cat.name %>
                                    </option>
                                    <% }) %>
                            </select>
                            <i class="fas fa-chevron-down"
                                style="position: absolute; right: 15px; top: 50%; transform: translateY(-50%); color: rgba(255,255,255,0.4); pointer-events: none;"></i>
                        </div>
                    </div>
                </div>

                <div class="form-group" style="margin-bottom: 30px;">
                    <label for="slug" class="form-label"
                        style="display: block; margin-bottom: 10px; font-size: 0.85rem; letter-spacing: 1px; text-transform: uppercase; color: rgba(255,255,255,0.5); font-weight: 600; margin-left: 4px;">Slug
                        (URL)</label>
                    <input type="text" id="slug" name="slug" value="<%= data.slug %>" required class="form-control"
                        style="width: 100%; background: rgba(255,255,255,0.01); border: 1px solid rgba(255,255,255,0.05); padding: 14px 20px; border-radius: 14px; color: rgba(255,255,255,0.7); font-size: 0.95rem; font-family: monospace; outline: none;">
                </div>

                <!-- Media Section -->
                <div class="form-group" style="margin-bottom: 40px;">
                    <label class="form-label"
                        style="display: block; margin-bottom: 10px; font-size: 0.85rem; letter-spacing: 1px; text-transform: uppercase; color: rgba(255,255,255,0.5); font-weight: 600; margin-left: 4px;">Cover
                        Image</label>

                    <div style="display: grid; grid-template-columns: 1fr 2fr; gap: 32px;">
                        <!-- Current Image -->
                        <% if(data.image) { %>
                            <div
                                style="position: relative; border-radius: 16px; overflow: hidden; border: 1px solid rgba(255,255,255,0.1); height: 160px;">
                                <img src="<%= data.image %>" alt="Current Cover"
                                    style="width: 100%; height: 100%; object-fit: cover;">
                                <div
                                    style="position: absolute; bottom: 0; left: 0; width: 100%; background: rgba(0,0,0,0.6); backdrop-filter: blur(4px); color: white; padding: 8px; font-size: 0.8rem; text-align: center;">
                                    Current</div>
                            </div>
                            <% } else { %>
                                <div
                                    style="border-radius: 16px; border: 1px dashed rgba(255,255,255,0.1); height: 160px; display: flex; align-items: center; justify-content: center; color: rgba(255,255,255,0.3);">
                                    <span style="font-size: 0.9rem;">No Image</span>
                                </div>
                                <% } %>

                                    <!-- Upload Controls -->
                                    <div style="display: flex; flex-direction: column; gap: 20px;">
                                        <div style="position: relative; flex: 1;">
                                            <input type="file" id="imageUpload" name="imageUpload" accept="image/*"
                                                style="position: absolute; width: 100%; height: 100%; opacity: 0; cursor: pointer; z-index: 2;">
                                            <div class="upload-box-visual"
                                                style="height: 100%; background: rgba(255,255,255,0.02); border: 2px dashed rgba(255,255,255,0.1); border-radius: 16px; display: flex; align-items: center; justify-content: center; gap: 10px; transition: all 0.3s ease;">
                                                <i class="fas fa-cloud-upload-alt"
                                                    style="font-size: 1.2rem; color: var(--gold-primary);"></i>
                                                <span style="font-weight: 500; color: #fff; font-size: 0.95rem;">Upload
                                                    New File</span>
                                            </div>
                                        </div>

                                        <div style="position: relative;">
                                            <i class="fas fa-link"
                                                style="position: absolute; left: 16px; top: 50%; transform: translateY(-50%); color: rgba(255,255,255,0.3);"></i>
                                            <input type="text" id="image" name="image" value="<%= data.image %>"
                                                class="form-control" placeholder="Or update URL..."
                                                style="width: 100%; background: rgba(255,255,255,0.03); border: 1px solid rgba(255,255,255,0.1); padding: 14px 20px 14px 44px; border-radius: 16px; color: #fff; font-size: 1rem; outline: none;">
                                        </div>
                                    </div>
                    </div>
                </div>

                <!-- Content Editor -->
                <div class="form-group" style="margin-bottom: 40px;">
                    <label for="body" class="form-label"
                        style="display: block; margin-bottom: 10px; font-size: 0.85rem; letter-spacing: 1px; text-transform: uppercase; color: rgba(255,255,255,0.5); font-weight: 600; margin-left: 4px;">Story
                        Content</label>
                    <textarea name="body" id="body" rows="15" required class="form-control"
                        style="width: 100%; font-size: 1.1rem; line-height: 1.8; border: none; background: transparent; padding: 20px 0; min-height: 300px; resize: none; border-top: 1px solid rgba(255,255,255,0.1); border-radius: 0; color: rgba(255,255,255,0.9); outline: none; font-family: 'Georgia', serif;"><%= data.body %></textarea>
                </div>

                <!-- Action Bar -->
                <div
                    style="display: flex; align-items: center; justify-content: space-between; padding-top: 30px; border-top: 1px solid rgba(255,255,255,0.1);">
                    <a href="/admin/dashboard"
                        style="color: rgba(255,255,255,0.5); font-weight: 500; text-decoration: none; transition: color 0.2s;">Cancel</a>

                    <button type="submit" class="btn-primary"
                        style="background: var(--gold-gradient); color: #000; padding: 16px 48px; border-radius: 50px; font-weight: 700; border: none; font-size: 1.1rem; display: flex; align-items: center; gap: 10px; cursor: pointer; box-shadow: 0 10px 20px rgba(253, 185, 49, 0.2); transition: transform 0.2s;">
                        <i class="fas fa-save"></i> Save Changes
                    </button>
                </div>

            </div>
        </form>
    </div>
</div>

<script>
    // Visual Feedback Script
    const fileInput = document.getElementById('imageUpload');
    const visualBox = document.querySelector('.upload-box-visual');

    fileInput.addEventListener('dragenter', () => visualBox.style.borderColor = 'var(--gold-primary)');
    fileInput.addEventListener('dragleave', () => visualBox.style.borderColor = 'rgba(255,255,255,0.1)');
    fileInput.addEventListener('change', () => {
        if (fileInput.files.length > 0) {
            visualBox.style.borderColor = 'var(--gold-primary)';
            visualBox.style.background = 'rgba(255, 215, 0, 0.05)';
            visualBox.innerHTML = `<span style="font-weight: 600; color: var(--gold-primary); overflow:hidden; text-overflow:ellipsis; white-space:nowrap; max-width:90%;">${fileInput.files[0].name}</span>`;
        }
    });
</script>