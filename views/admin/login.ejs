<div class="auth-container">
    <div class="auth-glass-card">

        <div class="auth-icon-wrapper">
            <i class="fas fa-fingerprint"></i>
        </div>

        <h1 class="auth-title">Welcome Back</h1>
        <p class="auth-subtitle">Sign in to access your daily flow</p>

        <form action="/auth/login" method="POST">
            <div class="auth-input-group">
                <label for="username" class="auth-label">Username</label>
                <div class="input-wrapper">
                    <input type="text" name="username" id="username" class="auth-input"
                        placeholder="Enter your username" required autocomplete="username">
                    <i class="fas fa-user auth-input-icon"></i>
                </div>
            </div>

            <div class="auth-input-group">
                <div style="display: flex; justify-content: space-between; align-items: center;">
                    <label for="password" class="auth-label">Password</label>
                </div>
                <div class="input-wrapper">
                    <input type="password" name="password" id="password" class="auth-input" placeholder="••••••••"
                        required autocomplete="current-password">
                    <i class="fas fa-lock auth-input-icon"></i>
                </div>
            </div>

            <button type="submit" class="auth-btn">
                <span>Sign In</span>
                <i class="fas fa-arrow-right"></i>
            </button>
        </form>

        <div class="auth-footer">
            <p>New here? <a href="/auth/register" class="auth-link">Create an account</a></p>
        </div>
    </div>

    <div style="text-align: center; margin-top: 30px; opacity: 0.5;">
        <a href="/"
            style="color: rgba(255,255,255,0.7); font-size: 0.9rem; display: inline-flex; align-items: center; gap: 8px; text-decoration: none; transition: color 0.3s;">
            <i class="fas fa-arrow-left"></i> Back to Home
        </a>
    </div>
</div>