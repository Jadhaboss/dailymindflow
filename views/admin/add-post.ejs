<div class="container reveal">

    <!-- Header Section -->
    <div style="margin-bottom: 50px; text-align: center;">
        <a href="/admin/dashboard" class="back-link"
            style="display: inline-flex; align-items: center; gap: 8px; color: var(--text-secondary); margin-bottom: 20px; font-weight: 500; font-size: 0.95rem; text-decoration: none; transition: color 0.3s;">
            <i class="fas fa-arrow-left"></i> Back to Dashboard
        </a>
        <h1
            style="font-family: 'Playfair Display', serif; font-size: 3.5rem; margin-bottom: 12px; font-weight: 700; background: linear-gradient(180deg, #fff 0%, rgba(255,255,255,0.7) 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
            Create New Story</h1>
        <p
            style="color: var(--text-secondary); font-size: 1.1rem; max-width: 600px; margin: 0 auto; letter-spacing: 0.02em;">
            Share your thoughts with the world. Create beautiful content that inspires.
        </p>
    </div>

    <!-- Main Form Card -->
    <div style="max-width: 900px; margin: 0 auto;">
        <form action="/admin/add-post" method="POST" enctype="multipart/form-data">

            <div
                style="background: rgba(10, 10, 15, 0.6); backdrop-filter: blur(40px); border: 1px solid rgba(255,255,255,0.08); border-top: 1px solid rgba(255,255,255,0.15); border-radius: 32px; padding: 48px; box-shadow: 0 40px 80px -20px rgba(0,0,0,0.5);">

                <!-- Title & Category Row -->
                <div style="display: grid; grid-template-columns: 2fr 1fr; gap: 32px; margin-bottom: 32px;">
                    <div class="form-group" style="margin-bottom: 0;">
                        <label for="title" class="form-label"
                            style="display: block; margin-bottom: 10px; font-size: 0.85rem; letter-spacing: 1px; text-transform: uppercase; color: rgba(255,255,255,0.5); font-weight: 600; margin-left: 4px;">Title</label>
                        <input type="text" id="title" name="title" required class="form-control"
                            placeholder="Enter a captivating title..."
                            style="width: 100%; background: rgba(255,255,255,0.03); border: 1px solid rgba(255,255,255,0.1); padding: 16px 20px; border-radius: 16px; color: #fff; font-size: 1.1rem; outline: none; transition: all 0.3s;">
                    </div>

                    <div class="form-group" style="margin-bottom: 0;">
                        <label for="category" class="form-label"
                            style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 10px; font-size: 0.85rem; letter-spacing: 1px; text-transform: uppercase; color: rgba(255,255,255,0.5); font-weight: 600; margin-left: 4px;">
                            Category
                            <button type="button" id="openCategoryModal"
                                style="border: none; background: none; color: var(--gold-primary); font-size: 0.8rem; font-weight: 600; cursor: pointer; display: flex; align-items: center; gap: 4px; letter-spacing: 0.5px;">
                                <i class="fas fa-plus-circle"></i> NEW
                            </button>
                        </label>
                        <div style="position: relative;">
                            <select name="category" id="category" class="form-control"
                                style="width: 100%; appearance: none; cursor: pointer; background: rgba(255,255,255,0.03); border: 1px solid rgba(255,255,255,0.1); padding: 16px 20px; border-radius: 16px; color: #fff; font-size: 1rem; outline: none; transition: all 0.3s;">
                                <% categories.forEach(cat=> { %>
                                    <option value="<%= cat._id %>" style="background: #0f172a;">
                                        <%= cat.name %>
                                    </option>
                                    <% }) %>
                            </select>
                            <i class="fas fa-chevron-down"
                                style="position: absolute; right: 15px; top: 50%; transform: translateY(-50%); color: rgba(255,255,255,0.4); pointer-events: none;"></i>
                        </div>
                    </div>
                </div>

                <!-- Media Section -->
                <div class="form-group" style="margin-bottom: 40px;">
                    <label class="form-label"
                        style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 10px; font-size: 0.85rem; letter-spacing: 1px; text-transform: uppercase; color: rgba(255,255,255,0.5); font-weight: 600; margin-left: 4px;">
                        Cover Image
                        <span
                            style="font-size: 0.8rem; color: rgba(255,255,255,0.3); font-weight: 400; text-transform: none;">Choose
                            upload or URL</span>
                    </label>

                    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 32px;">
                        <!-- Upload Box -->
                        <div style="position: relative; height: 100%;">
                            <input type="file" id="imageUpload" name="imageUpload" accept="image/*"
                                style="position: absolute; width: 100%; height: 100%; opacity: 0; cursor: pointer; z-index: 2;">
                            <div class="upload-box-visual"
                                style="height: 100%; min-height: 140px; background: rgba(255,255,255,0.02); border: 2px dashed rgba(255,255,255,0.1); border-radius: 16px; display: flex; flex-direction: column; align-items: center; justify-content: center; transition: all 0.3s ease;">
                                <i class="fas fa-cloud-upload-alt"
                                    style="font-size: 1.8rem; color: var(--gold-primary); margin-bottom: 12px; filter: drop-shadow(0 0 10px rgba(255, 215, 0, 0.3));"></i>
                                <span style="font-weight: 600; color: #fff; font-size: 0.95rem;">Upload File</span>
                                <span style="font-size: 0.85rem; color: rgba(255,255,255,0.4); margin-top: 4px;">Drag &
                                    drop or click</span>
                            </div>
                        </div>

                        <!-- URL Input -->
                        <div style="display: flex; flex-direction: column; justify-content: center;">
                            <div class="form-group" style="margin-bottom: 0;">
                                <div style="position: relative;">
                                    <i class="fas fa-link"
                                        style="position: absolute; left: 16px; top: 50%; transform: translateY(-50%); color: rgba(255,255,255,0.3);"></i>
                                    <input type="text" id="image" name="image" class="form-control"
                                        placeholder="Or paste image URL..."
                                        style="width: 100%; background: rgba(255,255,255,0.03); border: 1px solid rgba(255,255,255,0.1); padding: 16px 20px 16px 44px; border-radius: 16px; color: #fff; font-size: 1rem; outline: none;">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Content Editor -->
                <div class="form-group" style="margin-bottom: 40px;">
                    <label for="body" class="form-label"
                        style="display: block; margin-bottom: 10px; font-size: 0.85rem; letter-spacing: 1px; text-transform: uppercase; color: rgba(255,255,255,0.5); font-weight: 600; margin-left: 4px;">Story
                        Content</label>
                    <textarea name="body" id="body" rows="15" required class="form-control"
                        placeholder="Tell your story..."
                        style="width: 100%; font-size: 1.1rem; line-height: 1.8; border: none; background: transparent; padding: 20px 0; min-height: 300px; resize: none; border-top: 1px solid rgba(255,255,255,0.1); border-radius: 0; color: rgba(255,255,255,0.9); outline: none; font-family: 'Georgia', serif;"></textarea>
                </div>

                <!-- Action Bar -->
                <div
                    style="display: flex; align-items: center; justify-content: space-between; padding-top: 30px; border-top: 1px solid rgba(255,255,255,0.1);">
                    <a href="/admin/dashboard"
                        style="color: rgba(255,255,255,0.5); font-weight: 500; text-decoration: none; transition: color 0.2s;">Cancel</a>

                    <button type="submit" class="btn-primary"
                        style="background: var(--gold-gradient); color: #000; padding: 16px 48px; border-radius: 50px; font-weight: 700; border: none; font-size: 1.1rem; display: flex; align-items: center; gap: 10px; cursor: pointer; box-shadow: 0 10px 20px rgba(253, 185, 49, 0.2); transition: transform 0.2s;">
                        <i class="fas fa-paper-plane"></i> Publish
                    </button>
                </div>

            </div>
        </form>
    </div>
</div>

<!-- Scripts -->
<script>
    // Input Focus Effects
    const inputs = document.querySelectorAll('input, select, textarea');
    inputs.forEach(input => {
        input.addEventListener('focus', () => {
            if (input.style.border) input.style.border = '1px solid var(--gold-primary)';
            if (input.parentElement.classList.contains('upload-box-visual')) return;
        });
        input.addEventListener('blur', () => {
            if (input.style.border) input.style.border = '1px solid rgba(255,255,255,0.1)';
        });
    });

    // Upload Box Logic
    const fileInput = document.getElementById('imageUpload');
    const visualBox = document.querySelector('.upload-box-visual');

    fileInput.addEventListener('dragenter', () => visualBox.style.borderColor = 'var(--gold-primary)');
    fileInput.addEventListener('dragleave', () => visualBox.style.borderColor = 'rgba(255,255,255,0.1)');
    fileInput.addEventListener('change', () => {
        if (fileInput.files.length > 0) {
            visualBox.style.borderColor = 'var(--gold-primary)';
            visualBox.style.background = 'rgba(255, 215, 0, 0.05)';
            visualBox.innerHTML = `
                <i class="fas fa-check-circle" style="color: var(--gold-primary); font-size: 2rem; margin-bottom: 8px;"></i>
                <span style="font-weight: 600; color: #fff;">${fileInput.files[0].name}</span>
            `;
        }
    });
</script>

<!-- Category Modal (Add later if needed, kept simple for now) -->
<!-- For now we rely on the Categories page to add new categories to avoid complex modal logic here -->
<script>
    document.getElementById('openCategoryModal').addEventListener('click', () => {
        if (confirm("To create a new category, please go to the Categories page. Leave this page?")) {
            window.location.href = '/admin/categories';
        }
    });
</script>