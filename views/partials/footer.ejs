<footer class="main-footer">
    <div class="container">
        <div
            style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 60px; margin-bottom: 60px;">

            <!-- Brand Column -->
            <div>
                <a href="/"
                    style="font-family: var(--font-display); font-size: 2rem; font-weight: 700; margin-bottom: 24px; display: block;">
                    DailyMindflow.
                </a>
                <p style="color: var(--text-secondary); margin-bottom: 32px;">
                    Curating thoughts, stories, and expertise for the modern mind. A digital sanctuary for big ideas.
                </p>
                <div style="display: flex; gap: 16px;">
                    <a href="#" class="btn-icon"><i class="fab fa-twitter"></i></a>
                    <a href="#" class="btn-icon"><i class="fab fa-instagram"></i></a>
                    <a href="#" class="btn-icon"><i class="fab fa-linkedin-in"></i></a>
                </div>
            </div>

            <!-- Quick Links -->
            <div>
                <h4 style="font-size: 1.25rem; margin-bottom: 24px;">Explore</h4>
                <ul style="list-style: none; display: flex; flex-direction: column; gap: 12px;">
                    <li><a href="/" style="color: var(--text-secondary);">Home</a></li>
                    <li><a href="/articles" style="color: var(--text-secondary);">Articles</a></li>
                    <li><a href="/about" style="color: var(--text-secondary);">About Us</a></li>
                    <li><a href="/contact" style="color: var(--text-secondary);">Contact</a></li>
                </ul>
            </div>

            <!-- Newsletter -->
            <div>
                <h4 style="font-size: 1.25rem; margin-bottom: 24px;">Stay Updated</h4>
                <p style="color: var(--text-secondary); margin-bottom: 20px;">
                    Join our newsletter for weekly insights.
                </p>
                <form action="/subscribe" method="POST" style="display: flex; flex-direction: column; gap: 12px;">
                    <input type="email" name="email" placeholder="Your email address" required
                        style="padding: 14px 20px; border-radius: 50px; border: 1px solid var(--border-color); background: rgba(255,255,255,0.5); color: var(--text-color); outline: none; width: 100%;">
                    <button type="submit" class="btn-primary" style="width: 100%;">
                        Subscribe
                    </button>
                </form>
            </div>
        </div>

        <div
            style="border-top: 1px solid var(--border-color); padding-top: 32px; display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 20px;">
            <p style="color: var(--text-secondary); font-size: 0.9rem;">
                &copy; <%= new Date().getFullYear() %> DailyMindflow
            </p>
            <div style="display: flex; gap: 24px; font-size: 0.9rem;">
                <a href="/privacy" style="color: var(--text-secondary);">Privacy</a>
                <a href="/terms" style="color: var(--text-secondary);">Terms</a>
            </div>
        </div>
    </div>
</footer>