<header class="site-header">
    <div class="container navbar">
        <a href="/" class="logo">
            <img src="/images/logo.png?v=<%= Date.now() %>" alt="DailyMindflow">
        </a>

        <nav>
            <ul class="nav-links">
                <li><a href="/" class="nav-link">Home</a></li>
                <li><a href="/about" class="nav-link">About</a></li>
                <li><a href="/articles" class="nav-link">Articles</a></li>
                <li><a href="/contact" class="nav-link">Contact</a></li>
            </ul>
        </nav>

        <div class="nav-actions">
            <button id="themeToggle" class="btn-icon" aria-label="Toggle Theme">
                <i class="fas fa-moon"></i>
            </button>

            <!-- Simple Search Icon for now (can expand later) -->
            <form action="/search" method="POST" class="search-form" style="display: flex; align-items: center;">
                <!-- Hidden input or simple toggle can be added here if needed, keeping it minimal -->
                <button type="button" class="btn-icon" aria-label="Search"
                    onclick="document.querySelector('.search-overlay').classList.add('active')">
                    <i class="fas fa-search"></i>
                </button>
            </form>

            <button id="mobileMenuBtn" class="btn-icon mobile-menu-btn" aria-label="Menu" style="display: none;">
                <!-- Hidden on desktop via CSS -->
                <i class="fas fa-bars"></i>
            </button>
        </div>
    </div>

    <!-- Full Screen Search Overlay (New Addition for Premium Feel) -->
    <div class="search-overlay mobile-menu-overlay" style="z-index: 2005;">
        <button class="btn-icon" style="position: absolute; top: 30px; right: 30px;"
            onclick="document.querySelector('.search-overlay').classList.remove('active')">
            <i class="fas fa-times"></i>
        </button>
        <form action="/search" method="POST" style="width: 100%; max-width: 600px; text-align: center;">
            <input type="text" name="searchTerm" placeholder="Type to search..."
                style="width: 100%; background: transparent; border: none; border-bottom: 2px solid var(--text-color); font-family: var(--font-display); font-size: 2rem; color: var(--text-color); padding: 10px; outline: none; text-align: center;">
        </form>
    </div>

    <!-- Mobile Menu -->
    <div class="mobile-menu-overlay" id="mobileMenuOverlay">
        <button id="mobileMenuClose" class="btn-icon" style="position: absolute; top: 30px; right: 30px;">
            <i class="fas fa-times"></i>
        </button>
        <ul class="mobile-nav-links">
            <li><a href="/" class="mobile-nav-link">Home</a></li>
            <li><a href="/articles" class="mobile-nav-link">Articles</a></li>
            <li><a href="/about" class="mobile-nav-link">About</a></li>
            <li><a href="/contact" class="mobile-nav-link">Contact</a></li>
        </ul>
    </div>
</header>